<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/spo2Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spO2Text"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="74dp"
            android:layout_marginLeft="74dp"
            android:layout_marginTop="-95dp"
            android:text="@string/SpO2" />

        <Button
            android:id="@+id/bioharnessButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-131dp"
            android:layout_marginEnd="79dp"
            android:layout_marginRight="79dp"
            android:text="@string/Bioharness" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-67dp"
            android:layout_marginTop="123dp"
            android:layout_toEndOf="@+id/textView3"
            android:text="Heart Rate"
            android:visibility="visible" />

        <TextView
            android:id="@+id/hrText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/spO2Text"
            android:layout_alignTop="@+id/textView"
            android:text="0.0" />

        <TextView
            android:id="@+id/spO2Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/respText"
            android:layout_alignTop="@+id/textView13"
            android:text="0.0" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView13"
            android:layout_alignParentTop="true"
            android:layout_marginTop="166dp"
            android:text="Respiration Rate" />

        <TextView
            android:id="@+id/respText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView3"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="140dp"
            android:layout_marginRight="140dp"
            android:text="0.0" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/spo2Button"
            android:layout_alignParentTop="true"
            android:layout_marginTop="88dp"
            android:text="SpO2" />

    </RelativeLayout>
</layout>